            <div class="radio-group">
                <label><input type="radio" name="tipo" value="empresa" checked> Sou Empresa</label>
                <label><input type="radio" name="tipo" value="musico"> Sou Músico</label>
            </div>

            <div class="form-row">
                <div><label>Nome Completo</label><input type="text" id="nome" required></div>
                <div><label>Email</label><input type="email" id="email" required></div>
