rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Função auxiliar: verificar autenticação
    function isAuthenticated() {
      return request.auth != null;
    }
    // Função auxiliar: verificar se é o próprio utilizador
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    // Função auxiliar: verificar se email está verificado
    function isEmailVerified() {
      return isAuthenticated() && request.auth.token.email_verified == true;
    }
    
    // UTILIZADORES
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // MÚSICOS (Nomes sincronizados com auth.js)
    match /musicians/{musicianId} {
      allow read: if true;
      allow write: if isOwner(musicianId);
    }
    
    // EMPRESAS (Nomes sincronizados com auth.js)
    match /companies/{companyId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(companyId);
    }
    
    // BOOKINGS / RESERVAS
    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && (
        resource.data.musicianId == request.auth.uid || 
        resource.data.companyId == request.auth.uid
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.musicianId == request.auth.uid || 
        resource.data.companyId == request.auth.uid
      );
    }
    
    // ADMIN NOTIFICATIONS & LOGS
    match /admin_notifications/{id} {
      allow read: if isAuthenticated() && request.auth.token.admin == true;
      allow write: if false; // Apenas via Cloud Functions
    }
    
    match /admin_logs/{id} {
      allow read: if isAuthenticated() && request.auth.token.admin == true;
      allow write: if false;
    }
    
    match /monthly_reports/{id} {
      allow read: if isAuthenticated() && request.auth.token.admin == true;
      allow write: if false;
    }
  }
}
